@import './mixin'

body
  width: 768px 
  height: 1024px
  margin: 0px
  padding: 0px
  background-color: black
  color: white
  font-family: 'Open Sans', sans-serif
  font-size: 13px

#planetBar
  width: 100%
  height: 58px
  padding: 0px
  margin: 0px
  margin-top: -152px
  text-align: center
  li
    width: 20%
    padding: 0px 5px 0px 5px 
    display: inline-block
    vertical-align: middle
    img 
      width: 100px

@-webkit-keyframes pulse
  from 
    -webkit-transform: scale(1)
  to
    -webkit-transform: scale(1)
  50%
    -webkit-transform: scale(1.4)

.pulse
  -webkit-animation-name: pulse
  -webkit-animation-duration: 4s
  -webkit-animation-iteration-count: infinite
  -webkit-animation-timing-function: ease-in-out

.planetInfoDisplay 
  width: 100%
  height: 900px
  padding: 0px
  margin: 0px
  display:none

  #left
    width: 760px
    text-align: center
    img
      width: 760px
  #planetInfo
    width: 80%
    margin-left:100px
    margin-top:-60px

ul
  list-style:none
  margin: 0px
  padding: 0px

#planetInfo ul li
  display: inline-block
  margin-right: 10px  

#promop:
  margin-left: 30px
  margin-top : 30px

